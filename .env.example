# === Nest Mini Exporter ===

# Chromecast / Nest device name as it appears on the network
NEST_DEVICE_NAME="myNest speaker"

# Port for Flask app that exposes /nowplaying and /metrics
NEST_EXPORTER_PORT=9807

# How often to poll the Chromecast status (seconds)
NEST_REFRESH_INTERVAL=5

# Where to store play statistics JSON
NEST_STATS_FILE=./song_play_stats.json


# === Top 10 + Image Relay ===

# Path to the stats JSON file used by nest_top10_image_relay.py
# Defaults to NEST_STATS_FILE if not set.
NEST_TOP10_JSON_STATS_PATH=./song_play_stats.json

# Where downloaded album arts will be stored
NEST_TOP10_LOCAL_DIR=./top10_album_arts

# How often to re-check the JSON stats and update top 10 (seconds)
NEST_TOP10_CHECK_INTERVAL=30

# Port exposing Prometheus /metrics for the Top 10 stats
NEST_TOP10_METRICS_PORT=9808

# Port for the Flask image server (top 10 covers + backgrounds)
NEST_TOP10_IMAGE_PORT=9809

# Directory with custom background images (served at /bgs/<filename>)
NEST_TOP10_BGS_DIR=./bgs_nest_top_ten
